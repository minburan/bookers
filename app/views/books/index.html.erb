 <h1>Books</h1>
   <table>
    <thead>
     <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
     </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %> 
      <tr>
        <td><span><%= book.title %></span></td>
        <td> <span><%= book.body %></span></td>
        <td>
          <span>
           <%= link_to 'Show', "/books/#{book.id}" %>
          </span>
        </td>
        <td>
          <span>
           <%= link_to 'Edit', "/books/#{book.id}/edit" %>
          </span>
        </td>
        <td>
          <span>
           <%= link_to 'Destroy', "/books/#{book.id}", method: :delete, "data-confirm" => 'Are you sure?' %>
          </span>
        </td>
      </tr>
    <% end %>
    </tbody>
   </table>
   
 

<h2>New book</h2>
 <%= form_with model: @book do |f| %>

 <div class = "alert">
 <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
 <% end %>
 </div>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 


  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
