<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

<div class = "alert">
 <% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being updated:
 <% end %>
</div>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit 'Update Book' %>
<% end %>

<span>
 <%= link_to 'Show', "/books/#{@book.id}" %>
 |
</span>

<span>
 <%= link_to 'Back', "/books" %>
</span>